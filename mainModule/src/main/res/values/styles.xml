<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="operatorCard">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="operatorCard.content">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="operatorCard.title">
        <item name="android:gravity">start</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="operatorCard.docs">
        <item name="android:maxLines">8</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="operatorCard.code">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="operatorCard.runButton">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="fragmentResult"/>

    <style name="fragmentResult.content">
        <item name="android:background">#80ffffff</item>
    </style>

    <style name="fragmentResult.display">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:maxLines">100</item>
    </style>

    <style name="fragmentResult.closeButton">
        <item name="android:src">@drawable/ic_close_black</item>
    </style>

</resources>
